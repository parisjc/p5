{% block js %}
    {{ asset('plugins/ckeditor/ckeditor.js') }}
    <script>
        var editor;
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .then( neweditor => {
                editor = neweditor;
                {#editor.setData("<p>{{ post.content|raw }}</p>")#}

            })
            .catch( error => {
                console.error( error );
            } );

        $('#save').click(function (event) {
            console.log(editor.getData());
            $.post('/P5/updatepost', {id: {{ post.id }}, content: editor.getData()})
                .done(data => data && data === 'true'?document.location.href="/P5":console.log('kos'))
                .fail()
                .always();
        });
    </script>
